@{
    ViewBag.Title = "Welcome";
}

<h2>Welcome to My Ventures</h2>
<div class="col-md-12">
    <form method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-content">
                <div class="col-md-12">
                    <div class="title">
                        <h3>Welcome Box</h3>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group is-empty">
                            <input type="text" name="model.head" value="@ViewBag.head.MetaText" placeholder="Best For" class="form-control">
                        </div>
                        <div class="form-group  is-empty">
                            <label class="control-label"> Content </label>
                            <textarea class="form-control" name="model.text" rows="10">
                                @ViewBag.text.MetaText
                            </textarea>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                            <div class="fileinput-new thumbnail">
                                <img src='/uploads/@(ViewBag.img.MetaText == "" ? "image_placeholder.jpg" : ViewBag.img.MetaText)' alt="...">
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail"></div>
                            <div>
                                <span class="btn btn-rose btn-round btn-file">
                                    <span class="fileinput-new">Select image</span>
                                    <span class="fileinput-exists">Change</span>
                                    <input type="file" name="model.img" />
                                </span>
                                <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-info">Update</button>
        </div>
    </form>
</div>
