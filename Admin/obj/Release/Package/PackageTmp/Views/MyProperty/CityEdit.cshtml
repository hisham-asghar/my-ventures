@model List<DBLayer.AmenitiesType>

@{
    ViewBag.Title = "Amenity Edit";
}
<a href="/MyProperty/City" class="btn btn-info">View All Cities</a><br />
<div class="card">
    <div class="card-header" data-background-color="purple">
        <h4 class="card-title">@ViewBag.Title</h4>
    </div>
    <div class="card-content">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" name="model.AmenitiesTypeId" value="@ViewBag.Model.AmenitiesTypeId" />
            <div class="col-md-8">
                <div class="col-md-12">
                    <select class="select form-control" name="model.ParentTypeId" placeholder="Choose an option">
                        @foreach (var c in Model)
                        {
                            <option value="@c.AmenitiesTypeId" @(c.AmenitiesTypeId == ViewBag.Model.AmenitiesTypeId ? "selected=true" : "") > @c.AmenitiesTypeName</option>
                        }
                    </select>

                    <div class="form-group label-floating">
                        <label class="control-label">Amenity Name</label>
                        <input type="text" name="model.AmenitiesTypeName" class="form-control" value="@(ViewBag.Model.AmenitiesTypeName ?? "")" />
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Save </button><br />
            </div>
        </form>
    </div>
</div>
