@model DBLayer.History
@{
    ViewBag.Title = "Add/Update History";
}
<a href="@Url.Action("Index","History")" class="btn btn-info">View All Hisotry Items</a><br />
<div class="card">
    <div class="card-header" data-background-color="purple">
        <h4 class="card-title">@ViewBag.Title</h4>
    </div>
    <div class="card-content">
        <form method="post">
            <input type="hidden" name="model.HistoryId" value="@Model.HistoryId" />
            <div class="col-md-8">
                <div class="col-md-12">
                    <div class="form-group label-floating">
                        <label class="control-label">Title</label>
                        <input type="text" class="form-control" name="model.Title" value="@Model.Title" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group label-floating">
                        <label class="control-label">Sort Id</label>
                        <input type="number" class="form-control" name="model.sortId" value="@Model.sortId" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group label-floating">
                        <label class="control-label">Text</label>
                        <textarea name="model.Text" class="form-control" rows="10">
                            @(Model.Text ?? "")
                        </textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Save </button><br />
            </div>
        </form>
    </div>
</div>
