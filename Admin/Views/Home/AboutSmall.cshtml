@{
    ViewBag.Title = "About";
}

<h2>About Us Settings</h2>
<div class="col-md-12 card">
    <div class="card-content">
        <form method="post">
            <div class="col-md-12">
                <div class="title">
                    <h3>About Small</h3>
                </div>
                <div class="form-group  is-empty">
                    <label class="control-label"> You can write your text here...</label>
                    <textarea class="form-control" name="@ViewBag.about.MetaName" rows="10">
                        @ViewBag.about.MetaText
                    </textarea>
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-info">Update</button>
            </div>
        </form>
    </div>
</div>
