@{
    ViewBag.Title = "Contact";
}

<h2>Contact Page Settings</h2>
<div class="col-md-12 card">
    <div class="card-content">
        <form method="post">

            <div class="col-md-12">
                <div class="title">
                    <h3>Email</h3>
                </div>
                <div class="form-group is-empty">
                    <input type="email" value="@ViewBag.email.MetaText" name="@ViewBag.email.MetaName" placeholder="Best For" class="form-control">
                </div>
            </div>
            <div class="col-md-12">
                <div class="title">
                    <h3>Location</h3>
                </div>
                <div class="form-group  is-empty">
                    <label class="control-label"> You can write your text here...</label>
                    <textarea class="form-control" name="@ViewBag.location.MetaName" rows="5">@ViewBag.location.MetaText</textarea>
                    <span class="material-input"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="title">
                    <h3>Phone</h3>
                </div>
                <div class="form-group is-empty">
                    <label class="control-label"> You can write your text here...</label>
                    <textarea class="form-control" name="@ViewBag.phone.MetaName" rows="5">@ViewBag.phone.MetaText</textarea>
                    <span class="material-input"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="title">
                    <h3>OPEN HOURS</h3>
                </div>
                <div class="form-group is-empty">
                    <label class="control-label"> You can write your text here...</label>
                    <textarea class="form-control" name="@ViewBag.open.MetaName" rows="5">@ViewBag.open.MetaText</textarea>
                    <span class="material-input"></span>
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-info">Update</button>
            </div>
        </form>
    </div>
</div>