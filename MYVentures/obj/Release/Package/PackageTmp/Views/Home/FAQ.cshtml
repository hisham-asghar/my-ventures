@{
    ViewBag.Title = "Contact";
}
<!-- ========== Page Title ========== -->
<header class="page-title pt-dark">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>F.A.Q.</h1>
            </div>
        </div>
    </div>
</header>
@model List<DBLayer.FAQ>

<section class="section">
    <div class="row ws-m">
        <header class="sec-heading">
            <h2>General Questions</h2>
            <span class="subheading">Frequently Asked Questions</span>
        </header>
    </div><!-- / .row -->

    <div class="row">
        <div class="col-md-offset-3 col-md-6">
              
            <!-- FAQ Accordion -->
            <div class="panel-group accordions-1" id="faq-accordion-1" role="tablist" aria-multiselectable="true">
                @{
                    var flag = true;
                }
                @foreach (var faq in Model)
                {
                    
                    <!-- Item 2 -->
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="heading-@faq.FAQid">
                            <h4 class="panel-title">
                                <span class="collapsed" role="button" data-toggle="collapse" data-parent="#faq-accordion-1" href="#collapse-@faq.FAQid" aria-expanded="false" aria-controls="collapse-@faq.FAQid">
                                    @faq.Question
                                </span>
                            </h4>
                        </div>
                        <div id="collapse-@faq.FAQid" class="panel-collapse collapse @(flag ? "in" : "")" role="tabpanel" aria-labelledby="heading-@faq.FAQid">
                            <div class="panel-body">
                                @faq.Answer
                            </div>
                        </div>
                        @{
                            flag = false;
                        }
                    </div><!-- / .panel -->
                }


            </div><!-- / .panel-group .accordion-1 -->

            <span class="faq-contact-links">
                <i class="fa fa-info-circle"></i> 
                If you have more questions 
                <a href="@Url.Action("Index","Contact")">contact us here.</a>
            </span>

        </div><!-- / .col-md-6 -->
    </div><!-- / .row -->
</section><!-- / .container -->
