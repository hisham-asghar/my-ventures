@{
    ViewBag.Title = "CEO's Message";
    var UploadLocation = MYVentures.Helpers.CustomActions.GetUploadLocation();  
}
@model CustomModels.CeoModel
<style>
    .ceo_message_text ul br {
        display: none !important; 
    }
</style>
<!-- ========== Page Title ========== -->
<header class="page-title pt-large pt-dark pt-plax-lg-dark" data-stellar-background-ratio="0.4">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h1>
                    <a href="@Url.Action("About","Home")"></a>
                </h1>
                <span class="subheading">CEO's message</span>
            </div>
        </div>
    </div>
</header>

<!-- ========== About - Section ========== -->
<section class="container section">
    <div class="row">
        <div class="col-md-12 blog-post-single wow fadeIn" data-wow-delay=".1s" data-wow-duration="2s">

            <!-- Image -->
            <div class="col-md-8">
                
                <img class="img-responsive post-img" alt="CEO's Image" style="width: 100%;"
                     src="@(string.IsNullOrWhiteSpace(Model.image.MetaText) ? "http://placehold.it/850x500" : UploadLocation+"/"+Model.image.MetaText)">
                
                <div class="ceo_message_text blog-post-content">
                    @Html.Raw(Model.message.MetaText.Contains("\n") ? Model.message.MetaText.Replace("\n", "<br />") : Model.message.MetaText)
                    <br />
                    <footer>
                        <cite style="font-weight: bold;">@Model.name.MetaText</cite>
                    </footer>
                    
                </div>
            </div>
            <div class="col-md-4 pricing-tables">
                <div class="p-table">
                    <!-- Heading -->
                    <h4>Media contacts</h4>
                    <!-- Items -->
                    <ul class="p-items">
                        <li>
                            <i class="fa fa-phone"></i> &nbsp;
                            @Model.phone.MetaText
                        </li>
                        <li>
                            <i class="fa fa-envelope"></i> &nbsp;
                            @Model.email.MetaText
                        </li>
                    </ul>
                </div><!-- / .p-table -->
            </div>
        </div>
    </div>
</section><!-- / .container -->
